package practice24;
public class ChairTest {
    public static void main(String[] args) {
        Client client = new Client();
        
        // Создаем фабрики
        ChairFactory victorianFactory = new VictorianChairFactory();
        ChairFactory multifunctionalFactory = new MultifunctionalChairFactory();
        ChairFactory magicFactory = new MagicChairFactory();
        
        System.out.println("=== Тестирование абстрактной фабрики стульев ===\n");
        
        // Создаем стулья и тестируем
        System.out.println("1. Викторианский стул:");
        client.sit(victorianFactory.createChair());
        
        System.out.println("2. Многофункциональный стул:");
        client.sit(multifunctionalFactory.createChair());
        
        System.out.println("3. Магический стул:");
        client.sit(magicFactory.createChair());
    }
}
